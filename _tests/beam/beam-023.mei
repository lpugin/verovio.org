<?xml-model href="https://music-encoding.org/schema/4.0.1/mei-all.rng" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<mei xmlns="http://www.music-encoding.org/ns/mei" meiversion="4.0.1">
  <meiHead>
    <fileDesc>
      <titleStmt>
        <title>Beams with opposite stem directions</title>
      </titleStmt>
      <pubStmt>
        <respStmt>
          <persName role="encoder">Klaus Rettinghaus</persName>
          <corpName role="funder">Enote GmbH</corpName>
        </respStmt>
        <date isodate="2020">2020</date>
      </pubStmt>
      <seriesStmt>
        <title>Verovio test suite</title>
      </seriesStmt>
      <notesStmt>
        <annot>Slope the beam in the direction of the outside interval.</annot>
      </notesStmt>
      <sourceDesc>
        <source>
          <bibl>Behind Bars, p. 26, example 2</bibl>
        </source>
      </sourceDesc>
    </fileDesc>
    <encodingDesc>
      <appInfo>
        <application version="unknown" label="0">
          <name>Verovio</name>
        </application>
      </appInfo>
    </encodingDesc>
  </meiHead>
  <music>
    <body>
      <mdiv>
        <score>
          <scoreDef meter.count="7" meter.unit="8" meter.form="invis">
            <staffGrp>
              <staffDef n="1" lines="5"/>
            </staffGrp>
          </scoreDef>
          <section>
            <measure>
              <staff n="1">
                <layer n="1">
                  <beam>
                    <note pname="b" oct="5" dur="8" stem.dir="down"/>
                    <note pname="g" oct="3" dur="8" stem.dir="up"/>
                    <note pname="d" oct="6" dur="8" stem.dir="down"/>
                  </beam>
                  <beam>
                    <note pname="b" oct="5" dur="8" stem.dir="down"/>
                    <note pname="d" oct="6" dur="8" stem.dir="down"/>
                    <note pname="g" oct="3" dur="8" stem.dir="up"/>
                    <note pname="b" oct="3" dur="8" stem.dir="up"/>
                  </beam>
                </layer>
              </staff>
            </measure>
          </section>
        </score>
      </mdiv>
    </body>
  </music>
</mei>
